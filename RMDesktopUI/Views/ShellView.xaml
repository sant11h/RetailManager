<Window x:Class="RMDesktopUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMDesktopUI.Views"
        mc:Ignorable="d" FontSize="18" Foreground="White"
        Title="ShellView" Height="600" Width="1000" Background="#FF2D2D30">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18" Background="#FF2D2D30" Foreground="White">
            <MenuItem Header="_File">

            </MenuItem>
            <MenuItem Header="_Account" >
                <MenuItem x:Name="LoginScreen" Header="_Login" Background="#FF2D2D30" Foreground="White"/>
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="20 5 20 20" Grid.ColumnSpan="2" Foreground="#FF2D2D30"/>
        </Grid>
    </DockPanel>

</Window>
